{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "0.1.0",
    "description": "Example extension",
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "service_worker": "src/background.ts"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content.ts"],
            "run_at": "document_idle"
        }
    ],
    "permissions": ["storage", "scripting", "tabs"]
}
